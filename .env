# Server
PORT=3000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=medical_portal
DATABASE_URL=postgres://postgres:postgres@localhost:5432/medical_portal

# JWT
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=24h

# OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# SMS (Twilio)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=your-twilio-phone-number

# Email
EMAIL_PROVIDER=nodemailer
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# Storage
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=your-aws-region
AWS_BUCKET=your-aws-bucket

# Cloudflare
CF_ACCOUNT_ID=your-cloudflare-account-id
CF_ACCESS_KEY_ID=your-cloudflare-access-key
CF_SECRET_ACCESS_KEY=your-cloudflare-secret-key
CF_BUCKET=your-cloudflare-bucket

# Encryption
ENCRYPTION_KEY=your-encryption-key

# Upload
UPLOAD_DIR=uploads

# Vite
VITE_API_URL=http://localhost:3000 